<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:background="@color/main_color_red_dk" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView 
            android:textSize="18sp" 
            android:textColor="@color/white" 
            android:background="@color/main_color_red" 
            android:paddingLeft="10dp" 
            android:paddingTop="5dp" 
            android:paddingRight="10dp" 
            android:paddingBottom="5dp" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:text="My Orders"/>
        
    </LinearLayout>
    <LinearLayout android:id="@+id/linearheader" android:gravity="center_vertical" android:background="@color/main_color_gray_dk" android:padding="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ordrdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.01"
            android:gravity="center"
            android:text="Order Date"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View android:id="@+id/view2" android:background="@color/gray_light" android:layout_width="0.75dip" android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.02"
            android:gravity="center"
            android:text="Total Price"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
        
    <ListView
            android:id="@+id/myallorderlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

    </ListView>
        
    </RelativeLayout>
  

				  
</LinearLayout>